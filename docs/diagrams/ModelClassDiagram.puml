@startuml

!include style.puml
skinparam arrowThickness 1.1
skinparam arrowColor MODEL_COLOR
skinparam classBackgroundColor MODEL_COLOR

Package Model as ModelPackage <<Rectangle>>{
Class "<<interface>>\nReadOnlyAddressBook" as ReadOnlyAddressBook
Class "<<interface>>\nReadOnlyUserPrefs" as ReadOnlyUserPrefs
Class "<<interface>>\nModel" as Model
Class AddressBook
Class ModelManager
Class UserPrefs

Class UniqueSupplierList
Class Supplier
Class Address
Class Email
Class Name
Class Phone
Class Tag

Class UniqueProductList
Class Product
Class ProductName
Class StockLevel {
    - stockLevel: int
    - minStockLevel: int
    - maxStockLevel: int
}

Class I #FFFFFF
}

Class HiddenOutside #FFFFFF
HiddenOutside ..> Model

AddressBook .up.|> ReadOnlyAddressBook

ModelManager .up.|> Model
Model .right.> ReadOnlyUserPrefs
Model .left.> ReadOnlyAddressBook
ModelManager -left-> "1" AddressBook
ModelManager -right-> "1" UserPrefs
UserPrefs .up.|> ReadOnlyUserPrefs

AddressBook *--> "1" UniqueSupplierList
UniqueSupplierList -left-> "~* all" Supplier
Supplier *--> Name
Supplier *--> Phone
Supplier *--> Email
Supplier *--> Address
Supplier *--> "*" Tag

AddressBook *--> "1" UniqueProductList
UniqueProductList --> "~*all" Product
Product *--> ProductName
Product *--> StockLevel

Supplier -[hidden]up--> I
UniqueSupplierList -[hidden]right-> I

Name -[hidden]right-> Phone
Phone -[hidden]right-> Address
Address -[hidden]right-> Email

ModelManager --> "~* filtered" Supplier
ModelManager --> "~* filtered" Product
@enduml
