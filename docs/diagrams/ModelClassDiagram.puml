@startuml
!include style.puml
skinparam arrowThickness 1.1
skinparam arrowColor MODEL_COLOR
skinparam classBackgroundColor MODEL_COLOR

Package Model as ModelPackage <<Rectangle>>{
    Package order {
        Class CustomerOrder
        Class CustomerOrderList
        Class Order
        Class OrderList
        Class OrderStatus <<enumeration>>
        Class SupplyOrder
        Class SupplyOrderList
    }

    Package person {
        Class Address
        Class Customer
        Class Email
        Class Information
        Class Name
        Class NameContainsKeywordsPredicate
        Class Person
        Class PersonContainsTagsPredicate
        Class Phone
        Class Supplier
        Class UniquePersonList
    }

    Package product {
        Class Catalogue
        Class Ingredient
        Class IngredientCatalogue
        Class Ingredients
        Class Pastry
        Class PastryCatalogue
        Class Product
    }

    Package tag {
        Class Tag
    }

    Package util {
        Class Remark
        Class SampleDataUtil
        Class AddressBook
        Class ModelManager
        Class UserPrefs
        Class "<<interface>>\nModel" as Model
        Class "<<interface>>\nReadOnlyAddressBook" as ReadOnlyAddressBook
        Class "<<interface>>\nReadOnlyUserPrefs" as ReadOnlyUserPrefs
    }

    Class I #FFFFFF
    Class HiddenOutside #FFFFFF
}

IngredientCatalogue -up-|> Catalogue
PastryCatalogue -up-|> Catalogue
Ingredient -up-|> Product
Pastry -up-|> Product

IngredientCatalogue --> "1..*" Ingredient
PastryCatalogue --> "1..*" Pastry
Catalogue --> "1..*" Product
Ingredients --> "*" Ingredient

HiddenOutside ..> Model

AddressBook .up.|> ReadOnlyAddressBook

ModelManager .up.|> Model
Model .right.> ReadOnlyUserPrefs
Model .left.> ReadOnlyAddressBook
ModelManager -left-> "1" AddressBook
ModelManager -right-> "1" UserPrefs
UserPrefs .up.|> ReadOnlyUserPrefs

AddressBook *--> "1" UniquePersonList
UniquePersonList --> "~* all" Person
Person *--> Name
Person *--> Phone
Person *--> "0..1" Email
Person *--> "0..1" Address
Person *--> "0..1" Remark
Person *--> "*" Tag
Person *--> "*" Order

CustomerOrderList -up-|> OrderList
SupplyOrderList -up-|> OrderList
Customer -up-|> Person
Supplier -up-|> Person

CustomerOrderList --> "1..*" CustomerOrder
OrderList --> "1..*" Order
SupplyOrderList --> "1..*" SupplyOrder
CustomerOrder *--> OrderStatus
SupplyOrder *--> OrderStatus
Customer *--> "0..1" Information
Supplier *--> "0..*" Ingredients : ingredients supplied
Order *--> "0..1" Remark
ModelManager --> "~* filtered" Person

Person -[hidden]up--> I
UniquePersonList -[hidden]right-> I
Name -[hidden]right-> Phone
Phone -[hidden]right-> Address
Address -[hidden]right-> Email

@enduml


