<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Rectangle?>

<StackPane fx:id="personDetailFallback" styleClass="stack-pane" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
   <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" spacing="8.0">
      <Rectangle fx:id="imagePlaceholder" arcHeight="5.0" arcWidth="5.0" fill="WHITE" height="300.0" width="300.0" />
      <Label styleClass="label-header" text="Select a person from the left to view more details" textAlignment="CENTER" wrapText="true" VBox.vgrow="ALWAYS">
         <VBox.margin>
            <Insets />
         </VBox.margin>
      </Label>
   </VBox>
</StackPane>
