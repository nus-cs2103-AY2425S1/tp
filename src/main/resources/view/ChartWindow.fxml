<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Scene?>
<?import javafx.scene.layout.HBox?>
<?import javafx.stage.Stage?>

<?import javafx.scene.chart.PieChart?>
<?import java.net.URL?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<fx:root resizable="false" title="Chart" type="javafx.stage.Stage" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
    <scene>
        <Scene>
            <stylesheets>
                <URL value="@ChartWindow.css" />
            </stylesheets>
            <HBox alignment="CENTER" fx:id="helpMessageContainer">
                <VBox alignment="CENTER">
                    <PieChart fx:id="pieChart"/>
                    <padding>
                        <Insets bottom="30.0" left="5.0" right="15.0" top="30.0"/>
                    </padding>
                    <Label fx:id="internshipCount" text="Label">
                        <font>
                            <Font size="17.0" />
                        </font>
                    </Label>
                    <padding>
                        <Insets bottom="15.0" left="5.0" right="5.0" top="15.0"/>
                    </padding>
                </VBox>
            </HBox>
        </Scene>
    </scene>
</fx:root>
