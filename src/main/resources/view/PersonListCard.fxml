<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<HBox id="cardPane" fx:id="cardPane" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
  <GridPane HBox.hgrow="ALWAYS">
    <columnConstraints>
      <ColumnConstraints hgrow="SOMETIMES" minWidth="10" prefWidth="150" />
    </columnConstraints>
    <VBox alignment="CENTER_LEFT" minHeight="105" GridPane.columnIndex="0">
      <padding>
        <Insets top="5" right="5" bottom="5" left="15" />
      </padding>
      <HBox spacing="0.5" alignment="CENTER_LEFT">
        <Label fx:id="id" styleClass="cell_big_label">
          <minWidth>
            <!-- Ensures that the label text is never truncated -->
            <Region fx:constant="USE_PREF_SIZE" />
          </minWidth>
        </Label>
        <Label fx:id="name" text="\$first" styleClass="cell_big_label" />
      </HBox>
      <FlowPane fx:id="tags" />
      <Label fx:id="phone" styleClass="cell_small_label" text="\$phone" />
      <Label fx:id="address" styleClass="cell_small_label" text="\$address" />
      <Label fx:id="email" styleClass="cell_small_label" text="\$email" />
      <Label fx:id="roomNumberLabel" styleClass="cell_medium_label" text="Room number:" />
      <Label fx:id="roomNumber" styleClass="cell_small_label" text="\$roomNumber" />
      <Label fx:id="emergencyContactLabel" styleClass="cell_medium_label" text="Emergency contact:" />
      <Label fx:id="emergencyContactName" styleClass="cell_small_label" text="\$emergencyContactName" />
      <Label fx:id="emergencyContactPhone" styleClass="cell_small_label" text="\$emergencyContactPhone" />
      <Label fx:id="gradYearLabel" styleClass="cell_medium_label" text="Graduation year:" />
      <Label fx:id="gradYear" styleClass="cell_small_label" text="\$gradYear" />
    </VBox>
  </GridPane>
</HBox>
