<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<HBox id="cardPane" fx:id="cardPane" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
  <stylesheets>
    <URL value="@PersonListCard.css" />
  </stylesheets>
  <GridPane HBox.hgrow="ALWAYS">
    <columnConstraints>
      <ColumnConstraints hgrow="SOMETIMES" minWidth="10" prefWidth="150" />
      <ColumnConstraints hgrow="SOMETIMES" minWidth="100" prefWidth="150"/>
    </columnConstraints>
    <VBox alignment="CENTER_LEFT" minHeight="105" GridPane.columnIndex="0">
      <padding>
        <Insets top="5" right="5" bottom="5" left="15" />
      </padding>
      <HBox spacing="0.5" alignment="CENTER_LEFT">
        <Label fx:id="id" styleClass="cell_big_label">
          <minWidth>
            <!-- Ensures that the label text is never truncated -->
            <Region fx:constant="USE_PREF_SIZE" />
          </minWidth>
        </Label>
        <Label fx:id="name" text="\$first" styleClass="cell_big_label" />
      </HBox>
      <FlowPane fx:id="tags" />
      <FlowPane fx:id="tutorials" />
      <Label fx:id="studentId" styleClass="cell_small_label" text="\$studentId" />
      <Label fx:id="phone" styleClass="cell_small_label" text="\$phone" />
      <Label fx:id="email" styleClass="cell_small_label" text="\$email" />
    </VBox>
    <VBox alignment="TOP_CENTER" minHeight="105" GridPane.columnIndex="1">
      <padding>
        <Insets top="5" left="5" bottom="5" right="15" />
      </padding>
      <Label alignment="BASELINE_CENTER" text="Tutorials Attended:" style="-fx-underline: true; -fx-font-weight: bold;">
        <VBox.margin>
          <Insets bottom="5"/>
        </VBox.margin>
      </Label>
      <FlowPane fx:id="tutorials" hgap="5" vgap="5" alignment="CENTER" />
    </VBox>
  </GridPane>
</HBox>
