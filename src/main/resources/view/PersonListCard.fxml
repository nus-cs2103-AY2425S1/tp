<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<HBox id="cardPane" fx:id="cardPane" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1">
  <GridPane HBox.hgrow="ALWAYS">
    <columnConstraints>
      <ColumnConstraints hgrow="SOMETIMES" minWidth="10" prefWidth="150" />
    </columnConstraints>
    <VBox alignment="CENTER_LEFT" minHeight="105" prefHeight="105.0" prefWidth="155.0" GridPane.columnIndex="0">
      <padding>
        <Insets bottom="5" left="15" right="15" top="5" />
      </padding>
      <HBox alignment="CENTER_LEFT" spacing="0.5">
        <Label fx:id="id" styleClass="cell_big_label">
          <minWidth>
            <Region fx:constant="USE_PREF_SIZE" />
          </minWidth>
        </Label>
        <Label fx:id="name" styleClass="cell_big_label" text="\$first" />
        <Region HBox.hgrow="ALWAYS" />
        <Label styleClass="cell_id_prefix_label" text="PID:" />
        <Label fx:id="personId" styleClass="cell_id_label" text="\$personId" />
      </HBox>
      <FlowPane fx:id="tags" />
      <HBox spacing="5">
        <Label styleClass="cell_small_label" text="Phone Number:" />
        <Label fx:id="phone" styleClass="cell_small_value" text="\$phone" />
      </HBox>
      <HBox spacing="5">
        <Label styleClass="cell_small_label" text="Address:" />
        <Label fx:id="address" styleClass="cell_small_value" text="\$address" />
      </HBox>
      <HBox spacing="5">
        <Label styleClass="cell_small_label" text="Email:" />
        <Label fx:id="email" styleClass="cell_small_value" text="\$email" />
      </HBox>
      <HBox spacing="5">
        <Label styleClass="cell_small_label" text="Status:" />
        <Label fx:id="status" styleClass="cell_small_value" text="\$status" />
      </HBox>
    </VBox>
      <rowConstraints>
         <RowConstraints />
      </rowConstraints>
  </GridPane>
</HBox>
