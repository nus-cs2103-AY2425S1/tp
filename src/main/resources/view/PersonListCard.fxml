<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<HBox id="cardPane" fx:id="cardPane" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
  <GridPane HBox.hgrow="ALWAYS">
    <columnConstraints>
      <ColumnConstraints hgrow="SOMETIMES" minWidth="10" prefWidth="150" />
    </columnConstraints>
    <VBox alignment="CENTER_LEFT" minHeight="105" GridPane.columnIndex="0">
      <padding>
        <Insets top="5" right="5" bottom="5" left="15" />
      </padding>
      <HBox spacing="0.5" alignment="CENTER_LEFT">
        <Label fx:id="id" styleClass="cell_big_label">
          <minWidth>
            <!-- Ensures that the label text is never truncated -->
            <Region fx:constant="USE_PREF_SIZE" />
          </minWidth>
        </Label>
        <Label fx:id="name" text="\$first" styleClass="cell_big_label" wrapText="true" maxWidth="650"/>
      </HBox>
      <FlowPane fx:id="tags" hgap="5" vgap="5" prefWrapLength="600" maxWidth="600"/>
      <Label fx:id="phone" styleClass="cell_small_label" text="\$phone" wrapText="true" maxWidth="600"/>
      <Label fx:id="address" styleClass="cell_small_label" text="\$address" wrapText="true" maxWidth="600"/>
      <Label fx:id="email" styleClass="cell_small_label" text="\$email" wrapText="true" maxWidth="600"/>
    </VBox>
    <VBox alignment="TOP_RIGHT" GridPane.columnIndex="1" GridPane.rowIndex="0">
      <padding>
        <Insets top="10" right="8" bottom="5" left="15" />
      </padding>
      <Label text="Appointment details" styleClass="cell_appointment" style="-fx-text-fill: #ffffff;" />
      <Label fx:id="schedule" styleClass="cell_small_label" text="\$schedule" wrapText="true" maxWidth="400"/>
      <Label fx:id="reminder" styleClass="cell_small_label" text="\$reminder" wrapText="true" maxWidth="400"/>
    </VBox>
  </GridPane>
</HBox>
