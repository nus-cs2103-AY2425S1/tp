<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.Scene?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.stage.Stage?>

<fx:root title="Help" minWidth="600" minHeight="600" type="javafx.stage.Stage" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
  <icons>
    <Image url="@/images/help_icon.png" />
  </icons>
  <scene>
    <Scene>
      <stylesheets>
        <URL value="@HelpWindow.css" />
      </stylesheets>

      <VBox alignment="CENTER">
        <children>
          <HBox fx:id="helpMessageContainer" alignment="CENTER" VBox.vgrow="ALWAYS">
            <children>
              <Label fx:id="helpMessage" text="Label">
                <HBox.margin>
                  <Insets right="5.0" />
                </HBox.margin>
              </Label>
              <Button fx:id="copyButton" mnemonicParsing="false" onAction="#copyUrl" text="Copy URL">
                <HBox.margin>
                  <Insets topRightBottomLeft="5.0" />
                </HBox.margin>
              </Button>
            </children>
          </HBox>

          <HBox alignment="CENTER">
            <padding>
              <Insets bottom="5" left="10" right="10" top="5" />
            </padding>
            <children>
              <TableView fx:id="commandSummaryTable" prefHeight="950.0" prefWidth="1000.0" HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS">
                <columns>
                  <TableColumn fx:id="actionColumn" editable="false" minWidth="80" prefWidth="150.0" text="Command" />
                  <TableColumn fx:id="formatColumn" editable="false" minWidth="400" prefWidth="850.0" text="Format, Examples" />
                </columns>
              </TableView>
            </children>
          </HBox>
        </children>
      </VBox>
    </Scene>
  </scene>
</fx:root>
