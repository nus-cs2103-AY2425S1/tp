<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.Scene?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.image.Image?>
<?import javafx.stage.Stage?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>
<fx:root title="Help" type="javafx.stage.Stage" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1">
  <icons>
    <Image url="@/images/help_icon.png" />
  </icons>
  <scene>
    <Scene>
      <stylesheets>
        <URL value="@HelpWindow.css" />
      </stylesheets>
      <ScrollPane fitToHeight="true" fitToWidth="true">
        <VBox fx:id="helpMessageContainer" alignment="TOP_LEFT">
          <children>
            <Text fx:id="helpMessage" wrappingWidth="600" fill="WHITE">
              <VBox.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
              </VBox.margin>
            </Text>
          </children>
        </VBox>
      </ScrollPane>
    </Scene>
  </scene>
</fx:root>
