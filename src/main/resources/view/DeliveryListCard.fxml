<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<HBox id="cardPane" fx:id="cardPane" spacing="10.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1">
    <GridPane HBox.hgrow="ALWAYS">
        <columnConstraints>
            <ColumnConstraints hgrow="ALWAYS" minWidth="10" prefWidth="150" />
        </columnConstraints>
        <VBox alignment="CENTER_LEFT" minHeight="105" GridPane.columnIndex="0">
            <padding>
                <Insets bottom="5" left="15" right="5" top="5" />
            </padding>
            <HBox alignment="CENTER_LEFT" spacing="0.5">
                <Label fx:id="id" styleClass="cell_big_label">
                    <minWidth>
                        <Region fx:constant="USE_PREF_SIZE" />
                    </minWidth>
                </Label>
                <Label fx:id="productName" styleClass="cell_big_label" text="asfsadfasfsafdas" wrapText="true">
               <HBox.margin>
                  <Insets bottom="2.5" left="2.5" right="20.0" top="2.5" />
               </HBox.margin></Label>
                <Label fx:id="status" alignment="CENTER" minWidth="80" styleClass="cell_small_label" text="\$status" wrapText="true" />
            </HBox>
            <FlowPane fx:id="tags" /> <!-- If you want to add tags later -->

            <HBox alignment="CENTER_LEFT" spacing="5">
                <ImageView fitHeight="16" fitWidth="16" pickOnBounds="true" preserveRatio="true">
                    <Image url="@/images/supplier.png" />
                </ImageView>
                <Label fx:id="senderName" styleClass="cell_small_label" text="\$senderName" wrapText="true">
                <HBox.margin>
                    <Insets bottom="2.5" left="2.5" right="2.5" top="2.5" />
                </HBox.margin>
                </Label>
            </HBox>

            <HBox alignment="CENTER_LEFT" spacing="5">
                <ImageView fitHeight="16" fitWidth="16" pickOnBounds="true" preserveRatio="true">
                    <Image url="@/images/datetime.png" />
                </ImageView>
                <Label fx:id="deliveryTime" styleClass="cell_small_label" text="\$deliveryTime" wrapText="true">
                    <HBox.margin>
                        <Insets bottom="2.5" left="2.5" right="2.5" top="2.5" />
                    </HBox.margin>
                </Label>
            </HBox>

            <HBox alignment="CENTER_LEFT" spacing="5">
                <ImageView fitHeight="16" fitWidth="16" pickOnBounds="true" preserveRatio="true">
                    <Image url="@/images/cost.png" />
                </ImageView>
                <Label fx:id="cost" styleClass="cell_small_label" text="\$cost" wrapText="true">
                    <HBox.margin>
                        <Insets bottom="2.5" left="2.5" right="2.5" top="2.5" />
                    </HBox.margin>
                </Label>
            </HBox>

            <HBox alignment="CENTER_LEFT" spacing="5">
                <ImageView fitHeight="16" fitWidth="16" pickOnBounds="true" preserveRatio="true">
                    <Image url="@/images/quantity.png" />
                </ImageView>
                <Label fx:id="quantity" styleClass="cell_small_label" text="\$quantity" wrapText="true">
                    <HBox.margin>
                        <Insets bottom="2.5" left="2.5" right="2.5" top="2.5" />
                    </HBox.margin>
                </Label>
            </HBox>


         <GridPane.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </GridPane.margin>
        </VBox>
      <rowConstraints>
         <RowConstraints />
      </rowConstraints>
      <HBox.margin>
         <Insets bottom="10.0" right="10.0" top="10.0" />
      </HBox.margin>
    </GridPane>
   <opaqueInsets>
      <Insets />
   </opaqueInsets>
</HBox>
