<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.StackPane?>

<StackPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" alignment="CENTER_LEFT">

  <!-- Label for greyed-out suggestion (overlaying the TextField) -->
  <Label fx:id="suggestionLabel" style="-fx-font-family: 'Segoe UI'; -fx-font-size: 13pt; -fx-text-fill: rgba(255, 255, 255, 0.5); -fx-translate-x: 13;" />

  <!-- TextField where the user types -->
  <TextField fx:id="commandTextField" onAction="#handleCommandEntered" promptText="Enter command here..."
             style="-fx-font-family: 'Segoe UI'; -fx-font-size: 13pt; -fx-text-fill: white;" />

</StackPane>

