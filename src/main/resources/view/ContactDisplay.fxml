<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.fxml.FXML?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import seedu.address.model.person.Person?>

<ScrollPane fx:id="scrollPane" styleClass="scrollpane" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.171"
    stylesheets="@ContactDisplay.css" minWidth="300" prefWidth="450" maxWidth="1000">
    <VBox xmlns="http://javafx.com/javafx/8" styleClass="vbox" xmlns:fx="http://javafx.com/fxml/1"
          spacing="20" alignment="CENTER">
        <VBox fx:id="contactHeader" styleClass="header" alignment="TOP_CENTER">
          <Label fx:id="helpLabel" text=""/>
          <Label fx:id="nameLabel" text="Name:"/>
          <Label fx:id="categoryLabel" styleClass="category-label" text="Category:"/>
        </VBox>
        <VBox fx:id="contactBody" styleClass="body" spacing="20" alignment="TOP_CENTER">
          <Label fx:id="industryStudentIdLabel" text=""/>
          <Label fx:id="phoneLabel" text="Phone:"/>
          <Label fx:id="emailLabel" text="Email:"/>
          <Label fx:id="addressLabel" text="Address:"/>
          <FlowPane fx:id="tags" alignment="CENTER"/>
        </VBox>
    </VBox>
</ScrollPane>
