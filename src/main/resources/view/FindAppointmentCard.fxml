<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="10" alignment="TOP_LEFT" fx:id="FindAppointmentPane" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" stylesheets="@FindAppointmentCardStyle.css">
  <padding>
    <Insets top="20" right="20" bottom="20" left="20" />
  </padding>

  <GridPane hgap="20" vgap="10" styleClass="grid-pane">
    <Label text="Name" styleClass="field-label" GridPane.rowIndex="0" GridPane.columnIndex="0" />
    <Label text="NRIC:" styleClass="field-label" GridPane.rowIndex="1" GridPane.columnIndex="0" />
    <Label text="Phone:" styleClass="field-label" GridPane.rowIndex="2" GridPane.columnIndex="0" />
    <Label text="Email:" styleClass="field-label" GridPane.rowIndex="3" GridPane.columnIndex="0" />
    <Label text="Tags:" styleClass="field-label" GridPane.rowIndex="4" GridPane.columnIndex="0" />
    <Label text="Caregivers:" styleClass="field-label" GridPane.rowIndex="5" GridPane.columnIndex="0" />
    <Label text="Appointments:" styleClass="field-label" GridPane.rowIndex="6" GridPane.columnIndex="0" />

    <Label fx:id="name" text="\$first" styleClass="value-label" GridPane.rowIndex="0" GridPane.columnIndex="1" />
    <Label fx:id="nric" text="\$nric" styleClass="value-label" GridPane.rowIndex="1" GridPane.columnIndex="1" />
    <Label fx:id="phone" text="\$phone" styleClass="value-label" GridPane.rowIndex="2" GridPane.columnIndex="1" />
    <Label fx:id="email" text="\$email" styleClass="value-label" GridPane.rowIndex="3" GridPane.columnIndex="1" />
    <FlowPane fx:id="tags" styleClass="tags-pane" GridPane.rowIndex="4" GridPane.columnIndex="1" />
    <FlowPane fx:id="caregivers" styleClass="caregivers-pane" GridPane.rowIndex="5" GridPane.columnIndex="1" />
    <VBox fx:id="appointments" styleClass="appointments-pane" GridPane.rowIndex="6" GridPane.columnIndex="1" />
  </GridPane>
</VBox>
