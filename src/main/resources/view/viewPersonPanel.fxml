<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<ScrollPane fitToHeight="true" fitToWidth="true" minWidth="400" prefWidth="400" styleClass="details-base" HBox.hgrow="ALWAYS" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1">
    <VBox alignment="TOP_CENTER" minWidth="400" prefWidth="400" styleClass="details-pane" HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS"
          style="-fx-border-color: black; -fx-border-width: 2; -fx-border-radius: 5; -fx-padding: 10;">
        <padding>
            <Insets bottom="10" left="20" right="20" top="20" />
        </padding>

        <!-- Name label with large font size and centered -->
        <Label fx:id="name" styleClass="cell_name_label" text="Name: \$name"
               style="-fx-font-size: 40pt; -fx-font-weight: bold;"
               alignment="CENTER"
               wrapText="true"
               textAlignment="CENTER"
               maxWidth="400" />

        <!-- Status label with lighter blue background -->
        <Label fx:id="status" styleClass="cell_small_label" text="Status: \$status"
               style="-fx-background-color: #add8e6; -fx-padding: 5; -fx-background-radius: 5;" />

        <!-- Job label with lighter green background -->
        <Label fx:id="job" styleClass="cell_small_label" text="Job: \$job"
               style="-fx-background-color: #90ee90; -fx-padding: 5; -fx-background-radius: 5;" />

        <!-- Add a Region for spacing between Introduction and Background -->
        <Region prefHeight="20" /> <!-- Adjust the height as needed for spacing -->

        <!-- Contact Section -->
        <Label styleClass="cell_header_label" text="Background" style="-fx-font-size: 14pt; -fx-font-weight: bold;" />

        <!-- Interview Score -->
        <Label fx:id="interviewScore" styleClass="cell_small_label" text="interviewScore: \$interviewScore" />

        <!-- Skills -->
        <Label fx:id="skills" styleClass="cell_small_label" text="Skills: \$skills"
               wrapText="true"
               textAlignment="CENTER"
               alignment="CENTER"
               maxWidth="400" />

        <!-- Add a Region for spacing between Background and Contact -->
        <Region prefHeight="20" /> <!-- Adjust the height as needed for spacing -->

        <!-- Contact Section -->
        <Label styleClass="cell_header_label" text="Contact" style="-fx-font-size: 14pt; -fx-font-weight: bold;" />

        <!-- Phone label -->
        <Label fx:id="phone" styleClass="cell_small_label" text="Phone: \$phone" />

        <!-- Email label -->
        <Label fx:id="email" styleClass="cell_small_label" text="Email: \$email" />

        <!-- Add a Region for spacing between Contact and Skills -->
        <Region prefHeight="20" />

    </VBox>
</ScrollPane>
