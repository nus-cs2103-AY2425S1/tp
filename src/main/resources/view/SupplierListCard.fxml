<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<HBox id="cardPane" fx:id="cardPane" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
  <GridPane HBox.hgrow="ALWAYS">
    <columnConstraints>
      <ColumnConstraints hgrow="ALWAYS" minWidth="10" prefWidth="150" />
    </columnConstraints>
    <VBox alignment="CENTER_LEFT" minHeight="105" GridPane.columnIndex="0">
      <padding>
        <Insets top="5" right="5" bottom="5" left="15" />
      </padding>
      <HBox spacing="0.5" alignment="CENTER_LEFT">
        <Label fx:id="id" styleClass="cell_big_label">
          <minWidth>
            <!-- Ensures that the label text is never truncated -->
            <Region fx:constant="USE_PREF_SIZE" />
          </minWidth>
        </Label>
        <Label fx:id="name" text="\$name" styleClass="cell_big_label" wrapText="true">
        <HBox.margin>
          <Insets bottom="2.5" left="2.5" right="20" top="2.5" />
        </HBox.margin></Label>
        <Label fx:id="status" styleClass="cell_small_label" text="\$status" minWidth="70" alignment="CENTER"/>
      </HBox>

      <FlowPane fx:id="products" />
      <HBox spacing="5" alignment="CENTER_LEFT">
        <ImageView fitHeight="16" fitWidth="16" pickOnBounds="true" preserveRatio="true">
          <Image url="@/images/phone.png"/>
        </ImageView>
        <Label fx:id="phone" styleClass="cell_small_label" text="$phone" wrapText="true">
        <HBox.margin>
          <Insets bottom="2.5" left="2.5" right="2.5" top="2.5" />
        </HBox.margin></Label>
      </HBox>

      <HBox spacing="5" alignment="CENTER_LEFT">
        <ImageView fitHeight="16" fitWidth="16" pickOnBounds="true" preserveRatio="true">
          <Image url="@/images/address.png"/>
        </ImageView>
        <Label fx:id="company" styleClass="cell_small_label" text="\$company" wrapText="true">
        <HBox.margin>
          <Insets bottom="2.5" left="2.5" right="2.5" top="2.5" />
        </HBox.margin></Label>
      </HBox>

      <HBox spacing="5" alignment="CENTER_LEFT">
        <ImageView fitHeight="16" fitWidth="16" pickOnBounds="true" preserveRatio="true">
          <Image url="@/images/email.png"/>
        </ImageView>
        <Label fx:id="email" styleClass="cell_small_label" text="\$email" wrapText="true">
        <HBox.margin>
          <Insets bottom="2.5" left="2.5" right="2.5" top="2.5" />
        </HBox.margin></Label>
      </HBox>

      <FlowPane fx:id="tags" />
    </VBox>
  </GridPane>
</HBox>
