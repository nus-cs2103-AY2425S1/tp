<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="popupLayout" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="seedu.address.ui.AddLogPopupController" spacing="10" styleClass="background" padding="10">

    <TextArea fx:id="logEntryArea" promptText="Enter your log entry here..." prefHeight="150"
              styleClass="text-field" VBox.vgrow="ALWAYS"/>

    <HBox alignment="CENTER_RIGHT" spacing="10">
        <Button fx:id="saveButton" text="Save" styleClass="button" disable="true"/>
        <Button fx:id="cancelButton" text="Cancel" styleClass="button"/>
    </HBox>
</VBox>
