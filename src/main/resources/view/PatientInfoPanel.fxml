<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1">
    <Label fx:id="header" styleClass="label-subheader" stylesheets="@DarkTheme.css">
      <font>
         <Font size="18.0" />
      </font>
      <VBox.margin>
         <Insets bottom="4.0" left="2.0" right="2.0" top="4.0" />
      </VBox.margin>
    </Label>
    <ScrollPane fitToHeight="true" fitToWidth="true" hbarPolicy="NEVER">
        <content>
            <AnchorPane minWidth="0.0" styleClass="anchor-pane" stylesheets="@DarkTheme.css">
                <children>
               <VBox prefHeight="200.0">
                  <children>
                     <VBox>
                        <children>

                                <Label fx:id="basicInfoHeader" styleClass="label-subheader" stylesheets="@DarkTheme.css" textOverrun="CLIP" wrapText="true">
                              <VBox.margin>
                                 <Insets />
                              </VBox.margin>
                              <padding>
                                 <Insets bottom="2.0" left="4.0" right="4.0" top="2.0" />
                              </padding>
                                </Label>
                        </children>
                        <VBox.margin>
                           <Insets bottom="4.0" />
                        </VBox.margin>
                     </VBox>

                          <VBox spacing="2.0">
                              <Label fx:id="name" styleClass="label-text" stylesheets="@DarkTheme.css" wrapText="true">
                           <VBox.margin>
                              <Insets />
                           </VBox.margin>
                        </Label>
                              <Label fx:id="phone" styleClass="label-text" stylesheets="@DarkTheme.css" wrapText="true">
                           <VBox.margin>
                              <Insets />
                           </VBox.margin>
                        </Label>
                              <Label fx:id="nric" styleClass="label-text" stylesheets="@DarkTheme.css" wrapText="true">
                           <VBox.margin>
                              <Insets />
                           </VBox.margin>
                        </Label>
                              <Label fx:id="birthdate" styleClass="label-text" stylesheets="@DarkTheme.css" wrapText="true">
                           <VBox.margin>
                              <Insets />
                           </VBox.margin>
                        </Label>
                              <Label fx:id="sex" styleClass="label-text" stylesheets="@DarkTheme.css" wrapText="true">
                           <VBox.margin>
                              <Insets />
                           </VBox.margin>
                        </Label>
                        <VBox.margin>
                           <Insets bottom="2.0" top="2.0" />
                        </VBox.margin>
                        <padding>
                           <Insets left="4.0" />
                        </padding>
                          </VBox>

                          <VBox>
                             <children>

                                <Label fx:id="appointmentHeader" styleClass="label-subheader">
                                   <padding>
                                      <Insets bottom="2.0" left="4.0" right="4.0" top="2.0" />
                                    </padding>
                                 </Label>
                              </children>
                              <VBox.margin>
                                 <Insets bottom="4.0" top="4.0" />
                              </VBox.margin>
                           </VBox>

                           <VBox spacing="2.0">
                              <Label fx:id="appointments" styleClass="label-text" stylesheets="@DarkTheme.css" wrapText="true" minHeight="-Infinity"/>
                              <VBox.margin>
                                 <Insets bottom="2.0" top="2.0" />
                              </VBox.margin>
                              <padding>
                                 <Insets left="4.0" />
                              </padding>
                           </VBox>

                           <VBox>
                              <children>

                                      <Label fx:id="allergiesHeader" styleClass="label-subheader">
                                    <padding>
                                       <Insets bottom="2.0" left="4.0" right="4.0" top="2.0" />
                                    </padding>
                                      </Label>
                              </children>
                              <VBox.margin>
                                 <Insets bottom="4.0" top="4.0" />
                              </VBox.margin>
                           </VBox>

                           <VBox spacing="2.0">
                              <Label fx:id="allergies" styleClass="label-text" stylesheets="@DarkTheme.css" wrapText="true" minHeight="-Infinity"/>
                              <VBox.margin>
                                 <Insets bottom="2.0" top="2.0" />
                              </VBox.margin>
                              <padding>
                                 <Insets left="4.0" />
                              </padding>
                           </VBox>

                           <VBox>
                              <children>

                                <Label fx:id="furtherDetailsHeader" styleClass="label-subheader">
                                    <padding>
                                        <Insets bottom="2.0" left="4.0" right="4.0" top="2.0" />
                                    </padding>
                                </Label>
                        </children>
                        <VBox.margin>
                           <Insets bottom="4.0" top="4.0" />
                        </VBox.margin>
                     </VBox>

                          <VBox spacing="2.0">
                              <Label fx:id="email" styleClass="label-text" stylesheets="@DarkTheme.css" wrapText="true" />
                              <Label fx:id="address" styleClass="label-text" stylesheets="@DarkTheme.css" wrapText="true" />
                              <Label fx:id="nokName" styleClass="label-text" stylesheets="@DarkTheme.css" wrapText="true" />
                              <Label fx:id="nokPhone" styleClass="label-text" stylesheets="@DarkTheme.css" wrapText="true" />
                              <Label fx:id="bloodType" styleClass="label-text" stylesheets="@DarkTheme.css" wrapText="true" />
                              <Label fx:id="healthRisk" styleClass="label-text" stylesheets="@DarkTheme.css" wrapText="true" />
                              <Label fx:id="existingCondition" styleClass="label-text" stylesheets="@DarkTheme.css" wrapText="true" />
                              <Label fx:id="note" styleClass="label-text" stylesheets="@DarkTheme.css" wrapText="true" />
                        <VBox.margin>
                           <Insets bottom="6.0" top="2.0" />
                        </VBox.margin>
                        <padding>
                           <Insets left="4.0" />
                        </padding>
                          </VBox>
                  </children>
               </VBox>
                </children>
            </AnchorPane>
        </content>
    </ScrollPane>
</VBox>
